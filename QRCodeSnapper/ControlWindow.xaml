<Window x:Class="QRCodeSnapper.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Snapper" 
        Width="250" 
        Height="120"
        ResizeMode="CanMinimize"
        Topmost="True" 
        WindowStartupLocation="CenterScreen"
        Icon="/QRCodeSnapper_40.png">
    <Grid Background="#F0F0F0" Margin="5" MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Button Content="_New Snip" 
        FontSize="16" 
        Click="NewSnip_Click" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Padding="20,10"/>
    </Grid>
</Window>