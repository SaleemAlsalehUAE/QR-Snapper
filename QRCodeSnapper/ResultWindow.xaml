<Window x:Class="QRCodeSnapper.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Code Decoded!" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        MinWidth="300" MaxWidth="600" Background="#F0F0F0">
    <StackPanel Margin="20">
        <TextBlock Text="The following URL was found:" Margin="0,0,0,10" FontSize="14"/>
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
            <Hyperlink x:Name="decodedLink" RequestNavigate="Hyperlink_RequestNavigate">
                <!-- The URL will be inserted here from code -->
            </Hyperlink>
        </TextBlock>
        <TextBlock Text="(URL has been copied to your clipboard)" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,25"/>
        <Button Content="OK" IsDefault="True" Click="OkButton_Click" Padding="10,5" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>